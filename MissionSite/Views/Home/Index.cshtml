@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1><strong>Two Years? No Fears!</strong></h1>
    <br />
    <p class="lead">No Fears Missions is a company determined to help you head into your missionary service with no fears!</p>

</div>

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/Content/Images/romania-missionaries-teaching-man-1312483-wallpaper.jpg" alt="Missionaries">
                <h2 class="caro"> <span>Learn More About No Fears:<span class='spacer'></span> <br /> <span class='spacer'></span>Click <a href="@Url.Action("About", "Home")">here</a></span></h2>
            </div>

            <div class="item">
                <img src="http://iliketowastemytime.com/sites/default/files/great-map-of-the-world-in-high-resolution-wallpaper.jpg" alt="WorldMap">
                <h2 class="caro"> <span>What area does my mission cover:<span class='spacer'></span> <br /> <span class='spacer'></span>Click <a href="@Url.Action("Maps","Home")">here</a></span></h2>
            </div>

            <div class="item">
             
                <img src="http://www.siwallpaperhd.com/wp-content/uploads/2016/08/spain_sagrada_fam%C3%ADlia_wallpaper_hd.jpg" alt="Barcelona">
                <h2 class="caro"> <span>Learn More About the Barcelona Mission<span class='spacer'></span> <br /> <span class='spacer'></span>Click <a href="@Url.Action("MissionFAQs", "Missions", new { missionName = "Barcelona" })">here</a></span></h2>
            </div>


            <div class="item">
                <img src="http://lifeinmalaga.com/wp-content/uploads/2015/04/catedral-malaga-1.jpg" alt="Malaga">
                <h2 class="caro"> <span>Learn More About the Malaga Mission:<span class='spacer'></span> <br /> <span class='spacer'></span>Click <a href="@Url.Action("MissionFAQs", "Missions", new { missionName = "Malaga" })">here</a></span></h2>
            </div>

            <div class="item">
                <img src="http://d14dsi4x2zx6ql.cloudfront.net/files/styles/welcome_image/public/VCW_D_Redwood_RedwoodsNP_Hero_downsized.jpg?itok=nc5pl1sS" alt="Arcadia">
                <h2 class="caro"> <span>Learn More About the Arcadia Mission:<span class='spacer'></span> <br /> <span class='spacer'></span>Click <a href="@Url.Action("MissionFAQs", "Missions", new { missionName = "Arcadia" })">here</a></span></h2>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>






